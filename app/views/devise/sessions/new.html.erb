<div class="banner" style="background-image: linear-gradient(-225deg, rgba(145, 136, 154, 0.58) 0%, rgba(12, 15, 15, 0.5) 90%), url('<%= image_path('livingroom2.jpg')%>');">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <h2>Se connecter</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div>
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, label:"Mot de passe", required: false %>
            <%= f.input :remember_me, label: "se rappeler de moi", as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div>
            <%= f.button :submit, "Je me connecte" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
 </div>




