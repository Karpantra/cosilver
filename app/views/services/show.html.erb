<div class="container text-center">
  <div class="row">
  <div class="col-xs-12 col-sm-6">
      <figure class="snip1139">
        <blockquote><%= @service.description %>
          <div class="arrow"></div>
        </blockquote>
        <%= cl_image_tag @service.provider.photos.first.path, width: 350, height: 350, crop: :thumb, gravity: :face %>
        <div class="author">
          <h5><%= @service.provider.first_name %> <span>- <%= @service.price_per_hour %> â‚¬/heure</span></h5>
          <h4><%= @service.title %></h4>
          <p><%= @service.address %></p>
        </div>
      </figure>
    </div>
  </div>
</div>




  <div class="mappy col-xs-12 col-md-4">
    <div id="map" style="width: 100%; height: 100vh;"></div>
    <% content_for(:after_js) do %>
    <%= javascript_tag do %>
    $(document).ready(function() {
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' } }, function() {
    markers = handler.addMarkers(<%= raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    if (markers.length == 0) {
    handler.getMap().setZoom(2);
  } else if (markers.length == 1) {
  handler.getMap().setZoom(14);
}
});
});
<% end %>
<% end %>
</div>

<div></div>



<%= content_for(:after_js) do %>
<script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyAe4PVk38pNIO3t77HZnIT6f_8b_k30BCs"></script>
<% end %>
</div>
