<div class="col-xs-12 col-sm-6 col-md-4">
  <br>
  <%= simple_form_for [@product, @booking] do |f| %>
  <div class="input-daterange input-group" id="datepicker">
    <input type="text" class="input-sm form-control" name="booking[check_in]" />
    <span class="input-group-addon">to</span>
    <input type="text" class="input-sm form-control" name="booking[check_out]" />
  </div>
  <br>
  <%=  f.submit "Book the place", class: "btn btn-primary"%>
  <% end %>

<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <ul>
        <li><%= @service.category %></li>
        <li><%= @service.title %></li>
        <li><%= @service.price_per_hour %></li>
      </ul>
    </div>
  </div>



    <div class="mappy col-xs-12 col-md-4">
      <div id="map" style="width: 100%; height: 100vh;"></div>
        <% content_for(:after_js) do %>
        <%= javascript_tag do %>
          $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
              if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
            }
            });
            });
        <% end %>
      <% end %>
    </div>



    <%= content_for(:after_js) do %>
    <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyAe4PVk38pNIO3t77HZnIT6f_8b_k30BCs"></script>
    <% end %>
</div>
