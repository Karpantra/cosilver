<div class="container text-center col-xs-12 col-md-8">
  <div class="row">
    <div class="col-xs-12">
      <ul>
        <% @offers.each do |offer| %>
        <li><%= offer.content %></li>
        <li><%= offer.title %></li>
        <li><%= offer.price %></li>
        <li><%= offer.room_size %></li>
        <li><%= link_to "DÃ©tails", offer_path(offer) %></li>
        <% end %>
      </ul>
    </div>
    <%= link_to "Accueil", root_path %>


    <div class="mappy col-xs-12 col-md-4">
      <div id="map" style="width: 100%; height: 100vh;"></div>
        <% content_for(:after_js) do %>
        <%= javascript_tag do %>
          $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
              if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
            }
            });
            });
        <% end %>
      <% end %>
    </div>
  </div>
</div>



<%= content_for(:after_js) do %>
<script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyAe4PVk38pNIO3t77HZnIT6f_8b_k30BCs"></script>
<% end %>
