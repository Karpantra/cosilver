  <%= cl_image_tag availability.service.provider.photos.first.path, class: "product-image" %>
  <% else %>
  <%= image_tag "cosilverlogo3.png", class: "product-image" %>
  <% end %>
  <div class='product-body'>
    <h3><%= availability.service.title %></h3>
    <span><strong><%= availability.service.provider.first_name %> <%= availability.service.provider.last_name %></strong></span>
    <span> | <%= availability.date.strftime("%d/%m/%Y") %></span>
