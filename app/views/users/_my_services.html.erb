<% @availabilities.each do |availability| %>
<div class="product">
  <% if availability.service.provider.photos? %>
  <%= cl_image_tag availability.service.provider.photos.path %>
  <% else %>
  <%= image_tag "cosilverlogo3.png", class: "product-image" %>
  <% end %>
  <div class='product-body'>
    <h3><%= availability.service.title %></h3>
    <p><strong><%= availability.service.provider.first_name %></strong></p>
    <p>Le <%= availability.date.strftime("%d/%m/%Y") %></p>
    <p><%= availability.service.provider.email  %></p>
  </div>
  <ul class="list-inline product-controls product-controls-hidden hidden-sm hidden-xs">
    <%= link_to "", profile_users_path, class: "fa fa-trash"%>
  </ul>
</div>
<% end %>

